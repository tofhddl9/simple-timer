<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.lgtm.simple_timer.MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_compass_fragment_to_mapFragment"
            app:destination="@id/subFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_up"
            app:popEnterAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_out_down" />
    </fragment>

    <fragment
        android:id="@+id/subFragment"
        android:name="com.lgtm.simple_timer.SettingFragment"
        tools:layout="@layout/fragment_sub" />

</navigation>